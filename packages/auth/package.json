{
  "name": "@yuki/auth",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "react-server": "./src/index.rsc.ts",
