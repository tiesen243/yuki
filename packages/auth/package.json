    "lint": "eslint",
    "typecheck": "tsc --noEmit"
  },
  "prettier": "@yuki/prettier-config",
  "dependencies": {
    "@oslojs/crypto": "^1.0.1",
    "@oslojs/encoding": "^1.1.0",
    "@yuki/db": "workspace:*",
    "arctic": "^3.7.0",
    "next": "15.3.2",
    "react": "19.1.0"
  },
  "devDependencies": {
    "@yuki/eslint-config": "workspace:*",
    "@yuki/prettier-config": "workspace:*",
    "@yuki/tsconfig": "workspace:*",
    "eslint": "latest",
    "prettier": "latest",
    "typescript": "latest"
  }
