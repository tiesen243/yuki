{
  "name": "@yuki/ui",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/lib/utils.d.ts",
      "default": "./src/lib/utils.ts"
    },
    "./*": {
      "types": "./dist/components/*.d.ts",
      "default": "./src/components/*.tsx"
    },
    "./hooks/*": {
      "types": "./dist/hooks/*.d.ts",
      "default": "./src/hooks/*.ts"
    },
    "./tailwind.css": "./src/tailwind.css",
    "./postcss": "./postcss.config.js"
  },
  "scripts": {
    "build": "tsc",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "dev": "tsc --watch",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "typecheck": "tsc --noEmit",
    "ui-add": "bunx --bun shadcn@latest add && prettier src --write --list-different"
  },
  "prettier": "@yuki/prettier-config",
  "dependencies": {
    "@radix-ui/react-alert-dialog": "^1.1.14",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slot": "^1.2.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.511.0",
    "next-themes": "^0.4.6",
    "react": "catalog:react",
    "sonner": "^2.0.4",
    "tailwind-merge": "^3.3.0"
  },
  "devDependencies": {
    "@yuki/eslint-config": "workspace:*",
    "@yuki/prettier-config": "workspace:*",
    "@yuki/tsconfig": "workspace:*",
    "eslint": "catalog:tool",
    "postcss": "^8.5.4",
    "prettier": "catalog:tool",
    "tailwindcss": "catalog:tailwind",
    "tw-animate-css": "^1.3.2",
    "typescript": "catalog:tool"
  }
}
