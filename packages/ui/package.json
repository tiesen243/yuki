{
  "name": "@yuki/ui",
  "version": "2.0.0",
  "private": true,
  "license": "MIT",
  "type": "module",
  "exports": {
    "./utils": {
      "types": "./dist/utils.d.ts",
      "default": "./src/utils.ts"
    },
    "./*": {
      "types": "./dist/components/*/index.d.ts",
      "default": "./src/components/*/index.tsx"
    },
    "./vue/*": {
      "types": "./dist/components/*/index.vue.d.ts",
      "default": "./src/components/*/index.vue.ts"
    },
    "./hooks/*": {
      "types": "./dist/hooks/*.d.ts",
      "default": [
        "./src/hooks/*.ts",
        "./src/hooks/*.tsx"
      ]
    },
    "./tailwind.css": "./src/tailwind.css"
  },
  "scripts": {
    "build": "vue-tsc",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "dev": "vue-tsc --watch",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "typecheck": "vue-tsc --noEmit --emitDeclarationOnly false",
    "ui-add": "bunx --bun shadcn@canary add && prettier src --write --list-different"
  },
  "prettier": "@yuki/prettier-config",
  "dependencies": {
    "@radix-ui/react-avatar": "^1.1.3",
    "@radix-ui/react-label": "^2.1.2",
    "@radix-ui/react-select": "^2.1.6",
    "@radix-ui/react-slot": "^1.1.2",
    "@vueuse/core": "^12.5.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.475.0",
    "lucide-vue-next": "^0.475.0",
    "next-themes": "^0.4.4",
    "radix-vue": "^1.9.13",
    "react": "^19.0.0",
    "sonner": "^1.7.4",
    "tailwind-merge": "^3.0.1",
    "tailwindcss": "^4.0.5",
    "vue": "^3.5.13",
    "vue-sonner": "^1.3.0"
  },
  "devDependencies": {
    "@types/react": "^19.0.8",
    "@yuki/eslint-config": "workspace:*",
    "@yuki/prettier-config": "workspace:*",
    "@yuki/tsconfig": "workspace:*",
    "eslint": "latest",
    "prettier": "latest",
    "typescript": "latest",
    "vue-tsc": "^2.2.0"
  }
}
